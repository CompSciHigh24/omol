<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ratings</title>
  <link rel="stylesheet" href="/ratings.css" />
  <script src="/ratingScript.js" defer></script>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-logo">
      <img src="https://images.squarespace-cdn.com/content/v1/5b328976aa49a1b7b46b89c3/1530039440176-O24B7OCR4WPIAI62JZTW/CompSci.High_Circle_Logo.png?format=750w" alt="School Logo" />
    </div>
    <div class="nav-links">
      <a href="/">Teachers</a>
      <a href="/ratings">Comments & Ratings</a>
    </div>
  </nav>

  <div class="container">
    <h1>CSH Teacher Comments & Ratings</h1>

    <div class="form-section">
      <h2>Leave a Comment</h2>
      <form>
        <label>Your Name</label>
        <input type="text" name="username" />

        <label>Teacher's Name</label>
        <input type="text" name="teacher" />

        <label>Comment</label>
        <input type="text" name="comment" />

        <label for="rating">Rating (1 - 5)</label>
        <input type="number" name="rating" min="1" max="5" />

        <button type="submit">Submit Comment</button>
      </form>
    </div>

    <div class="teachers-grid">
      <% for (let index = 0; index < ratings.length; index++) { 
          const rating = ratings[index]; %>
        <div class="teacher-card">
          <div class="teacher-card-content">
            <h2><%= rating.teacher %></h2>
            <div class="stars">
              <% for (let i = 0; i < rating.rating; i++) { %>
                ⭐
              <% } %>
              <% for (let i = rating.rating; i < 5; i++) { %>
                ☆
              <% } %>
            </div>
            <p><strong>Comment:</strong> <%= rating.comment %></p>
            <p><em>By: <%= rating.username %></em></p>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
